= form_tag user_registration_path, class: 'form-signin' do
  %h2.form-signin-heading Request for access key
  %input{ type: 'email', name: 'user[email]', class: 'form-control', placeholder: 'Email Address', required: true }
  %input{ type: 'text', name: 'user[name]', class: 'form-control', placeholder: 'Name', required: true }
  %input{ type: 'password', name: 'user[password]', class: 'form-control', placeholder: 'Password', required: true  }
  %input{ type: 'password', name: 'user[password_confirmation]', class: 'form-control', placeholder: 'Password Confirm', required: true  }
  .radio-inline
    %label
      %input{ type: 'radio', name: 'user[role]', value: :casting, checked: true } casting
  .radio-inline
    %label
      %input{ type: 'radio', name: 'user[role]', value: :production } production

  %button.btn.btn-lg.btn-primary.btn-block{ type: 'submit' } Sign Up
